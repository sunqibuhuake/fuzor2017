<div class="col-lg-4 col-md-6 col-xs-12 col-sm-6">

    <div class="ultra-widget ultra-todo-task bg-primary">
        <div class="wid-task-header">
            <div class="wid-icon">
                <i class="fa fa-tasks"></i>
            </div>
            <div class="wid-text">
                <h4><%= cat.name %></h4>
                <span>包含<%= cat.children.length %>个二级类型</span>
            </div>
        </div>
        <div class="wid-all-tasks">

            <ul class="list-unstyled ps-container">

                <% cat.children.forEach(function(subcat){ %>

                <li>
                    <div class="icheckbox_minimal-white" style="position: relative;">
                        <%= subcat.name %>
                    </div>
                </li>

                <% }) %>

                <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 3px;">
                    <div class="ps-scrollbar-x" style="left: 0px; width: 0px;"></div>
                </div>
                <div class="ps-scrollbar-y-rail" style="top: 0px; right: 3px;">
                    <div class="ps-scrollbar-y" style="top: 0px; height: 0px;"></div>
                </div>
            </ul>

        </div>
        <div class="wid-add-task">
            <div class="row">
                <form role="form" action="/management/subcat" method="post">
                    <div class="col-xs-9">
                        <input type="text" name="name" class="form-control" placeholder="类型名称">
                        <input type="text" class="form-control" style="display: none;" name="parentId" value="<%= cat._id %>">
                    </div>
                    <div class="col-xs-3">
                        <button type="submit" class="btn  pull-right">添加</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>
