<body>
<div id="container">
    WAITING CONNECTION
</div>
<input style="display: none;" id="roomId" value="<%= user._id %>">
<script>

    var roomID = document.querySelector('#roomId').value

    var socket = io('/' + roomID)

    socket.on('active', function(data) {

        console.log(data)

        window.location = '/3d/tv2/' + data.modelId;

